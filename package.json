{
  "name": "xakaton-core",
  "version": "0.0.1",
  "description": "Xakaton core",
  "types": "types",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --raw --kill-others 'npm:dev:backend:bundle' 'npm:dev:backend:app'",
    "dev:backend": "concurrently --raw --kill-others 'npm:dev:backend:bundle' 'npm:dev:backend:app'",
    "dev:backend:bundle": "node esbuild.mjs --watch",
    "dev:backend:app": "nodemon --enable-source-maps --signal SIGTERM --watch _dev/backend --ext '*' _dev/backend/index.js",
    "prebuild": "tsc --noemit"
  },
  "author": "Roman Vasenin",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.6.0",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.10",
    "esbuild-plugin-import-glob": "^0.1.1",
    "json-schema": "^0.4.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "fastify": "^5.6.1",
    "json-schema-to-ts": "^3.1.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7"
  }
}
